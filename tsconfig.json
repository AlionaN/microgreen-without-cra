{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./client/**/*", "./node_modules/**/*"]
}
